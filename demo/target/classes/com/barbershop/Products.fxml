<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.barbershop.views.products.Products">
        <fx:define>
            <Screen fx:factory="getPrimary" fx:id="screen"/>
        </fx:define>
   <children>
        <HBox prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}" alignment="CENTER" style="-fx-background-color: LIGHTGREY;">
            <children>
              <VBox fx:id="leftMenu" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width/2}" alignment="CENTER" style="-fx-background-color: LIGHTGREY;">
                <TableView fx:id="table" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width/2}" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                  <columns>
                    <TableColumn fx:id="id" prefWidth="${screen.visualBounds.width/2/5}" text="ID" />
                    <TableColumn fx:id="name" prefWidth="${screen.visualBounds.width/2/5}" text="Name" />
                     <TableColumn fx:id="description" prefWidth="${screen.visualBounds.width/2/5}" text="Description" />
                    <TableColumn fx:id="quantity" prefWidth="${screen.visualBounds.width/2/5}" text="Quantity" />
                    <TableColumn fx:id="price" prefWidth="${screen.visualBounds.width/2/5}" text="Price" />
                  </columns>
                </TableView>
              </VBox>
              <VBox fx:id="rightMenu" prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width/2}" style="-fx-background-color: WHITESMOKE;">
                  <HBox fx:id="topMenu" alignment="CENTER_LEFT" prefHeight="50" spacing="10" style="-fx-background-color: lightseagreen; -fx-padding: 10">
                      <children>
                          <TextField fx:id="searchField" prefWidth="${screen.visualBounds.width/2.5}" AnchorPane.topAnchor="10" AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10" promptText="Search..." style="-fx-background-color: whitesmoke"/>  
                          <Button fx:id="searchButton" onAction="#onActionSearchButton" graphicTextGap="10" style="-fx-alignment: CENTER; -fx-background-color: transparent; -fx-text-fill: whitesmoke; -fx-font-weight: bold; -fx-font-size: 20; -fx-padding: 0;" >
                                  <text>ðŸ”Ž</text>
                                  <tooltip> 
                                  <Tooltip text="Search">
                                      <font>
                                          <Font size="13"/>
                                      </font>
                                  </Tooltip>
                                  </tooltip>
                          </Button>
                      </children>
                      </HBox>
                  <ListView fx:id="selectionList" prefHeight="${screen.visualBounds.height-120}" style="-fx-background-color: #ededed;">
                  </ListView>
                  <VBox prefHeight="10" />
                <HBox spacing="10" alignment="CENTER">
                    <Button fx:id="addButton" text="New Product" onAction="#onActionAddButton" style="-fx-border-color: transparent; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: GREEN; -fx-text-fill: WHITE ; -fx-font-weight: bold; -fx-font-size: 13;"/>
                    <Button fx:id="updateButton" text="Update Product" onAction="#onActionUpdateButton" style="-fx-border-color: transparent; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: BLUE; -fx-text-fill: WHITE ; -fx-font-weight: bold; -fx-font-size: 13;"/>
                    <Button fx:id="deleteButton" text="Delete Product" onAction="#onActionDeleteButton" style="-fx-border-color: transparent; -fx-border-width: 2; -fx-border-radius: 10; -fx-background-radius: 10; -fx-background-color: RED; -fx-text-fill: WHITE ; -fx-font-weight: bold; -fx-font-size: 13;"/>
                </HBox>
              </VBox>
            </children>
        </HBox>
   </children>
</AnchorPane>


