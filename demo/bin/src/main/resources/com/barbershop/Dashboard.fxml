<AnchorPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
        <fx:define>
            <Screen fx:factory="getPrimary" fx:id="screen"/>
        </fx:define>
   <children>
        <HBox prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width}" alignment="CENTER" style="-fx-background-color: LIGHTGREY;">
            <children>
              <VBox prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width/2}" alignment="CENTER" style="-fx-background-color: LIGHTGREY;">
                <Text text="Dashboard 1" style="-fx-fill: grey"/>
              </VBox>
              <VBox prefHeight="${screen.visualBounds.height}" prefWidth="${screen.visualBounds.width/2}" alignment="CENTER" style="-fx-background-color: WHITESMOKE;">
                <Text text="Dashboard 2" style="-fx-fill: grey"/>
              </VBox>
            </children>
        </HBox>
   </children>
</AnchorPane>


